                                        <FormattedString>
                                            <Span
                                            FontSize="16"
                                            Style="{StaticResource SpanStyle}"
                                            Text="{Binding Title}" />
                                            <Span Text="&#10;&#10;" />
                                            <Span Style="{StaticResource SpanStyle}" Text="{Binding TitleStatus}" />
                                            <Span Text="&#10;" />
                                            <Span
                                            FontFamily="{StaticResource Montserrat-Medium}"
                                            Style="{StaticResource SpanStyle}"
                                            Text="{Binding Date}"
                                            TextColor="{StaticResource Gray-700}" />
                                            <Span Text="&#10;&#10;" />
                                            
                                            <Span Text="&#10;" />
                                            <Span
                                            FontFamily="{StaticResource Montserrat-Medium}"
                                            Style="{StaticResource SpanStyle}"
                                            Text="{Binding OrderDate}"
                                            TextColor="{StaticResource Gray-700}" />
                                            <Span Text="&#10;&#10;" />
                                        </FormattedString>
                                    </progressBar:StepView.PrimaryFormattedText>
                                </progressBar:StepView>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </progressBar:SfStepProgressBar>
                    
                        
                    </Grid>-->
                    

                <!--<Button Grid.Row="3" TextColor="#FFFFFF" Text="შეკვეთა" 
                HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                Command="{Binding CheckoutCommand}" CommandParameter="{Binding Source={x:Reference Name=orderPage}}" BorderRadius="0"
                IsVisible="{Binding TotalOrderedItems, Converter={StaticResource inverseZeroVisibilityConverter}}"
                FontSize="{OnPlatform Default=12, Android=16}"
                BackgroundColor="{StaticResource primary_dark}" />-->
            </Grid>

            <!--<ActivityIndicator  HorizontalOptions="Center" VerticalOptions="Center" Color="#FF5722" IsRunning="{Binding MakingOrder}"></ActivityIndicator>-->

        </Grid>
        </ScrollView>
             
       
    </ContentPage.Content>
</ContentPage>